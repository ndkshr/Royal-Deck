<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MissingManActivity"
        tools:showPath="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/royal_deck_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo">

            <Button
                android:id="@+id/goto_mising_man_trick"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:backgroundTint="@color/pool_red"
                android:drawableEnd="@drawable/chevron_right"
                android:text="Missing Man Trick"
                android:textColor="@color/pool_gold" />

            <Button
                android:id="@+id/goto_21_card_trick"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:backgroundTint="@color/pool_red"
                android:drawableEnd="@drawable/chevron_right"
                android:text="Twenty One Card Trick"
                android:textColor="@color/pool_gold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>